  
pipeline {
    agent any
     stages {
        stage('clone source'){
            
           steps {
                git url: 'https://github.com/paul123-gif/ValaxyTech-hello-world.git'
            }
        }
        
        
        stage('build && SonarQube analysis') {
            steps {
                withSonarQubeEnv('My SonarQube Server') {
                   sh 'mvn clean package sonar:sonar'
                    }
                }
            }
        }
        
        stage('sonarscanner') {
            steps {
                 script {
                  withSonarQubeEnv('sonarqube') {
                    sh 'mvn sonar:sonar'
                }
            
                }
            
            }
        }

    }
}
