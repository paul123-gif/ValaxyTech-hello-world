  
pipeline {
    agent any
     stages {
        stage('clone source'){
            
           steps {
                git url: 'https://github.com/paul123-gif/ValaxyTech-hello-world.git'
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('sonarscanner') {
            steps {
                  withSonarQubeEnv('sonarqube') {
                    sh 'mvn sonar:sonar'
                }
                
                
       stage("Quality Gate") {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate true
                }
            }
        }
        
            
                }
            
            }
        }

    }
